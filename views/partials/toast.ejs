<div class="toast-container position-fixed bottom-0 end-0 p-2">
    <div id="<%- id || "" %>"
         role="alert"
         aria-atomic="true"
         aria-live="assertive"
         class="toast align-items-center text-bg-<%- variant %> border border-<%- variant %>"
    >
        <div class="d-flex">
            <div class="toast-body">
                <%- body || "Hello, world! This is a toast message." %>
            </div>
            <% const btn_close_variant = (variant !== "light") ? "btn-close-white" : "" %>
            <button type="button"
                    class="btn-close <%- btn_close_variant %> me-2 m-auto"
                    data-bs-dismiss="toast"
                    aria-label="Close"
            ></button>
        </div>
    </div>
</div>